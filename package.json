{
  "name": "mamia",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.x || 22.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "clean": "rimraf .next node_modules .cache package-lock.json && npm install",
    "db:migrate": "node scripts/deploy-migrations.js",
    "db:migrate:dry": "node scripts/deploy-migrations.js --dry-run",
    "db:test": "node scripts/test-database.js",
    "db:reset": "echo 'Manual reset required - please truncate tables in Supabase dashboard'",
    "db:seed": "node scripts/deploy-migrations.js",
    "check-rules": "node scripts/check-rules.js",
    "security-check": "node scripts/security-check.js",
    "health-check": "npm run check-rules && npm run security-check",
    "precommit": "npm run health-check",
    "handoff": "node scripts/handoff.js"
  },
  "dependencies": {
    "@playwright/mcp": "^0.0.29",
    "@playwright/test": "^1.53.2",
