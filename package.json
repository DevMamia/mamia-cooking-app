    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-pwa": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
